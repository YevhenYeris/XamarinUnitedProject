<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
       android:id="@id/backHome"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Назад"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="0.7"
        android:text="Сторінка містить список усіх складів смартфонів, наявних у базі даних"/>

        <ImageView
            android:layout_width="352.0dp"
            android:layout_height="312.5dp"
            android:src="@drawable/phones_warehouses_1"
            android:contentDescription="@string/phones_warehouses"
            android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="0.7"
        android:text="Натисніть на обрану адресу, щоб побудувати маршрут до неї"/>

        <ImageView
            android:layout_width="346.0dp"
            android:layout_height="291.5dp"
            android:src="@drawable/phones_warehouses_2"
            android:contentDescription="@string/phones_warehouses"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>
</ScrollView>