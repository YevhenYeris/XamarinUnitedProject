<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
       android:id="@id/backHome"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Назад"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="0.7"
        android:text="Сторінка містить список контактів, прізвище яких містить понад 10 літер"/>

        <ImageView
            android:layout_width="333.0dp"
            android:layout_height="350.5dp"
            android:src="@drawable/phones_contacts_1"
            android:contentDescription="@string/phones_contacts"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>
</ScrollView>