<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/btn_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/import_btn"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/export_btn"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_phones"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Каталог смартфонів"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Spinner
            android:id="@+id/spinner_formulas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/import_btn"
            android:layout_margin="10dp"
            android:visibility="invisible">
        </Spinner>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorError"
            android:text="x"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Формула некоректна"
        android:textSize="15dp"
        android:visibility="invisible"
        android:textColor="@android:color/holo_red_light"/>

    <EditText
        android:id="@+id/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="10dp"
        android:textSize="20dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/text_exec"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:text="@string/not_exec"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/text_eq"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:text="@string/not_eq"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_showtable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/show_table"
        android:layout_marginTop="15dp"
        android:visibility="invisible"/>

</LinearLayout>
